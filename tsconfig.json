{
  "compilerOptions": {
    "allowJs": true,
    "lib": ["es2016", "dom"],
    "target": "es2016",
    "module": "commonjs",
    "allowSyntheticDefaultImports": true,
    "baseUrl": "./src/",
    "rootDir": "./src/",
    "outDir": "./dist/",
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "noEmit": false,
    "noImplicitAny": false,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noUnusedLocals": true,
    "noUnusedParameters": false,
    "pretty": true,
    "skipLibCheck": true,
    "strictNullChecks": false,
    "sourceMap": true
  },
  "include": ["./src/**/*"]
}
