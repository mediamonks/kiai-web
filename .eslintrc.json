{
	"extends": "@mediamonks/eslint-config-base",
	"parserOptions": {
		"project": [
			"./tsconfig.json"
		]
	},
	"rules": {
		"@typescript-eslint/naming-convention": [
			"error",
			{
				"selector": "default",
				"format": [
					"strictCamelCase"
				],
				"leadingUnderscore": "forbid",
				"trailingUnderscore": "forbid"
			},
			{
				"selector": "objectLiteralProperty",
				"format": null,
				"leadingUnderscore": "forbid",
				"trailingUnderscore": "forbid"
			},
			{
				"selector": "typeAlias",
				"format": [
					"StrictPascalCase"
				],
				"prefix": [
					"T"
				]
			},
			{
				"selector": "class",
				"format": [
					"StrictPascalCase"
				]
			},
			{
				"selector": "enum",
				"format": [
					"StrictPascalCase"
				],
				"prefix": [
					"E"
				]
			},
			{
				"selector": "variable",
				"format": [
					"strictCamelCase",
					"UPPER_CASE"
				]
			},
			{
				"selector": "enumMember",
				"format": [
					"StrictPascalCase"
				]
			},
			{
				"selector": "interface",
				"format": [
					"StrictPascalCase"
				],
				"prefix": [
					"I"
				]
			},
			{
				"selector": "classProperty",
				"format": [
					"strictCamelCase",
					"UPPER_CASE"
				]
			}
		],
		"default-case-last": "off",
		"prettier/prettier": "off",
		"unicorn/explicit-length-check": "off",
		"unicorn/prevent-abbreviations": "off",
		"vue/multi-word-component-names": "off"
	}
}
